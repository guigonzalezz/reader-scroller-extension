{
  "name": "Reader Tools",
  "description": "Auto-scroll extension for reading web pages with continuous or interval scrolling modes",
  "version": "2.0.0",
  "manifest_version": 3,

  "permissions": ["scripting", "storage", "activeTab"],
  "host_permissions": ["<all_urls>"],

  "action": {
    "default_title": "Reader Tools",
    "default_popup": "popup.html",
    "default_icon": {
      "16": "images/icon-16.png",
      "48": "images/icon-48.png",
      "128": "images/icon-128.png"
    }
  },

  "icons": {
    "16": "images/icon-16.png",
    "48": "images/icon-48.png",
    "128": "images/icon-128.png"
  },

  "content_scripts": [
    {
      "matches": ["<all_urls>"],
      "js": ["content-script.js"]
    }
  ]
}
